Question 07: Build a Flutter application where pressing a button will change the color of all text widgets within the application.  
Source Code:
import 'package:flutter/material.dart';

void main() => runApp(const MyApp());

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return const MaterialApp(
      debugShowCheckedModeBanner: false,
      home: ColorChangeTextApp(),
    );
  }
}

class ColorChangeTextApp extends StatefulWidget {
  const ColorChangeTextApp({super.key});

  @override
  State<ColorChangeTextApp> createState() => _ColorChangeTextAppState();
}

class _ColorChangeTextAppState extends State<ColorChangeTextApp> {
  Color textColor = Colors.black; // Default color
  bool isBlue = false; // To toggle between colors

  void changeTextColor() {
    setState(() {
      // Toggle color between red and blue
      isBlue = !isBlue;
      textColor = isBlue ? Colors.blue : Colors.red;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Change Text Color Example'),
        backgroundColor: Colors.teal,
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text(
              'First Text Widget',
              style: TextStyle(fontSize: 24, color: textColor),
            ),
            const SizedBox(height: 10),
            Text(
              'Second Text Widget',
              style: TextStyle(fontSize: 24, color: textColor),
            ),
            const SizedBox(height: 10),
            Text(
              'Third Text Widget',
              style: TextStyle(fontSize: 24, color: textColor),
            ),
            const SizedBox(height: 30),
            ElevatedButton(
              onPressed: changeTextColor,
              style: ElevatedButton.styleFrom(
                padding:
                    const EdgeInsets.symmetric(horizontal: 30, vertical: 14),
              ),
              child: const Text(
                'Change Text Color',
                style: TextStyle(fontSize: 18),
              ),
            ),
          ],
        ),
      ),
    );
  }
}
